<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Start</title>
    <link rel="stylesheet" type="text/css" href="{{ URLROOT }}media/css/default.css">
    <link rel="stylesheet" href="{{ URLROOT }}media/css/fontello.css">
</head>
<body>
<div class="basis">
    <header>
        <a href="{{ URLROOT }}"><i class="icon-blogger"></i>
            <p>ordinary<span>Blog</span></p>
        </a>
        <div class="header_nav">
            <a href="#">SHARE</a>
            <a href="#">
                <i class="icon-search"></i>
            </a>
            <a {% if is_auth %} href="{{ URLROOT }}panel" style="color: #e76049"{% else %} href="{{ URLROOT }}login_page" {% endif %}>
                <i class="icon-user"></i>
            </a>
        </div>
    </header>
    <div class="main">
        <aside>
            {% for category in categories %}
                <a href="{{ URLROOT }}categories/{{ category.name }}">
                    <i class="icon-{{ category.getImage().url }}"></i>
                    <p>{{ category.name }}</p>
                </a>
            {% endfor %}
            <a href="#"><i class="icon-plus"></i>
                <p>add</p>
            </a>
        </aside>
        {{ view|raw }}
    </div>
    <footer>
        <p>&copy; Lorem ipsun del amen</p>
        <a href="#"><i class="icon-blogger"></i>
            <p>o<span>B</span></p>
        </a>
        <div class="cube"></div>
        <div class="cube2"></div>
    </footer>
</div>
<script src="{{ URLROOT }}media/js/default.js"></script>
</body>
</html>